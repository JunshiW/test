<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="test.bookExchange.service.TestService" >
	<resultMap id="bookResult" type="test">
		<id property="bid" column="bid" />
		<result property="name" column="title"/>
		<result property="des" column="description"/>
	</resultMap>
	
	<insert id = "save" parameterType = "test">
   		insert into test values (#{id}, #{name}, #{des})
	</insert>
	<select id="selectBookById" resultType="test" parameterType="int" resultMap="bookResult">
	    SELECT bid, title, description from book WHERE bid = #{id}
	</select>
</mapper> 